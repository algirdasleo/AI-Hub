{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./client/src/*"],
      "@server/*": ["./server/src/*"],
      "@cms/*": ["./cms/src/*"],
      "@shared/*": ["./shared/*"]
    }
  }
}
